    <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", function () {
            var originalValue = document.getElementById('nomEditor').value;

            document.getElementById('nomEditor').addEventListener('change', function () {
                var currentValue = this.value;

                // Si la valeur change, mettre à jour le champ caché nom_change
                if (originalValue !== currentValue) {
                    document.getElementById('nomChange').value = true;
                } else {
                    document.getElementById('nomChange').value = false;
                }
            });
        });
    </script>
    <script>
        // Fonction pour afficher/masquer la liste déroulante
        function toggleDropdown() {
            var dropdown = document.getElementById("joursDropdown");
            if (dropdown.style.display === "none") {
                dropdown.style.display = "block";
            } else {
                dropdown.style.display = "none";
            }
        }

        // Fonction pour mettre à jour le champ caché 'joursouhait' avec les jours sélectionnés
        function updateSelectedDays() {
            var checkboxes = document.querySelectorAll('#joursDropdown input[type="checkbox"]');
            var selectedDays = [];

            checkboxes.forEach(function (checkbox) {
                if (checkbox.checked) {
                    selectedDays.push(checkbox.value);
                }
            });

            // Mettre à jour le champ caché avec les jours sélectionnés
            document.getElementById('Joursouhait').value = selectedDays.join(', ');

            // Mettre à jour le texte affiché dans le div selectBox
            if (selectedDays.length > 0) {
                document.getElementById('selectedText').textContent = selectedDays.join(', ');
            } else {
                document.getElementById('selectedText').textContent = 'Cliquez pour choisir des jours';
            }
        }

        // Cacher la liste déroulante si l'utilisateur clique à l'extérieur
        window.onclick = function (event) {
            if (!event.target.matches('.select-box')) {
                var dropdown = document.getElementById("joursDropdown");
                if (dropdown.style.display === "block") {
                    dropdown.style.display = "none";
                }
            }
        }
    </script>
