@model WebApplication1.Models.StagiaireModel
@{
    Layout = "~/Views/Shared/_style.cshtml";
}
@{
    ViewBag.Title = "Intro";
}



<div class="container" onload="ShowCurrentTime();">
    <div class="row ">
        <div class="col-md-4" id="cadres" >

            <div id="logoentete">
            </div>
            <div class="access">
                Accès stagiaire<br>Evaluation langue
                @ViewBag.Reponse
            </div>
            <div class="nom">
                <table><tr><td><i class="material-icons">account_circle</i> </td><td>@Html.ValueFor(model => model.Civilite) @Html.ValueFor(model => model.nom) </td></tr><tr><td colspan="2">@Html.ValueFor(model => model.prenom)</td></tr></table>
                <div hidden>
                    @ViewBag.response
                    @ViewBag.url
                    @ViewBag.responsesPlanifier
                    @ViewBag.urlplan

                </div>
                <div hidden >
                    @ViewBag.Note_globale
                    @ViewBag.permision
                    @Model.type_mail
                </div>
                <div>
                    @ViewBag.resultWebsall <br /> @ViewBag.resultwebcal
                </div>
            </div>
            <div>
            </div>
        </div>
       
        <div class="col">

            @{
                string nom = Model.nom;
                string origin = "https://extranet.forma2plus.com/Profils/Plogon/" + Model.Numero;
                string mail = Model.mail;
            }

            @if (!string.IsNullOrEmpty(origin) && !string.IsNullOrEmpty(mail))
            {

                <a href="@($"https://incident.forma2plus.com/?nom={nom}&origin={origin}&mail={mail}")" class="inc-btn">
                    <i class="inc-icon"></i>
                    <span>Signaler un incident</span>
                </a>
            }
            else
            {

                <a href="@($"https://incident.forma2plus.com/?nom=&origin=&mail=")" class="inc-btn">
                    <i class="inc-icon"></i>
                    <span>Signaler un incident</span>
                </a>}

            <div class="titre">
                <p class="title"><b>Bienvenue sur la plateforme d'évaluation langue de Forma2+</b></p>
                <!--<p><b> Séléctionnez la tâche que vous voulez faire</b></p>
        -->
                <div class="row" style="margin-top:5%">

                    <div class="col-md-4" id="btncadre">
                        <div class="card">
                            <div class="card-body">
                                <a style="text-decoration:none;" href="@Url.Action("Editprofil", new { id = Model.Numero })">

                                    <div class="card-title sary" style="margin-bottom:42%;">
                                        <div class="figures">

                                            <img class="image-main" src="~/Content/images/resume.png">
                                            <img class="image-hover" src="~/Content/images/resume-survol.png">

                                        </div>
                                    </div>

                                    <p class="card-text" style="text-decoration:None;">Complétez votre fiche stagiaire</p>
                                </a>
                            </div>
                        </div>
                    </div>
                    @{
                        int p = 1;
                        if (@Model.type_mail == "B3")
                        {
                            p = 3;
                        }
                        else if (@Model.type_mail == "C3")
                        {
                            p = 3;
                        }

                        else if (@Model.type_mail == "A1")
                        {
                            p = 5;
                        }
                        else if (@Model.type_mail == "A2")
                        {
                            p = 5;
                        }

                        else if (@Model.type_mail == "P2")
                        {
                            p = 2;
                        }
                        else if (@Model.type_mail == "A2")
                        {
                            p = 5;
                        }
                        else if (@Model.type_mail == "P1")
                        {
                            p = 1;
                        }
                        else if (@Model.type_mail == "01")

                        {
                            p = 3;
                        }
                        else if (@Model.type_mail == "N9")

                        {
                            p = 7;
                        }
                        else

                        {
                            p = 0;
                        }// public bool hasprofils(int numero_stage)
                         // {


                        // return hasprofil;
                        // }


                    }


                    @{
                        if (@ViewBag.permision != 0)
                        {

                            if (@Model.type_mail != "01")
                            {
                                if (p != 0)
                                { <div class="col-md-4" id="btncadre">
                                        <div class="card">

                                            <div class="card-body ">
                                                <a style="text-decoration:none;" href="https://qcm.forma2plus.com/#!/stagiaire/@Model.Numero/@p">
                                                    <div class="card-title sary" style="margin-bottom:20%;">
                                                        <div class="figures">

                                                            <img class="image-main" src="~/Content/images/XMLID_1203_.png">
                                                            <img class="image-hover" src="~/Content/images/XMLID_1203_survol.png">

                                                        </div>
                                                    </div>

                                                    <p class="card-text" style="text-decoration:none;">Réaliser votre test Questionnaire à Choix Multiples (test grammatical de base)</p>
                                                </a>
                                            </div>


                                        </div>
                                    </div>
                                }
                            }

                        }
                    }




                    @{
                        if (@Model.type_mail != "N9")
                        {
                            if (@ViewBag.permision != 0)
                            {

                                if (Model.type_mail == "01")

                                {
                                    <div class="col-md-4" id="btncadre">
                                        <div class="card">
                                            <div class="card-body ">
                                                <a style="text-decoration:none;" href="http://s371880604.onlinehome.fr/webcalendar/srcs/www/auto.php?module=auto&action=default:stagiaire&x=@Model.nom&y=@Model.Numero&p=@p">
                                                    <div class="card-title sary" style="margin-bottom:30%;">
                                                        <div class="figures">

                                                            <img class="image-main" src="~/Content/images/calendar.png">
                                                            <img class="image-hover" src="~/Content/images/calendar-survol.png">

                                                        </div>
                                                    </div>

                                                    <p class="card-text" style="text-decoration : None ;">Planifier un rendez-vous pour votre évaluation par téléphone</p>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4" id="btncadre">
                                        <div class="card">
                                            <div class="card-body ">
                                                <a style="text-decoration:none;" href="http://s371880604.onlinehome.fr/webcalendar_salle/srcs/www/auto.php?module=auto&s=0&action=default:stagiaire&x=@Model.nom&y=@Model.Numero&auto=1&u=23">
                                                    <div class="card-title sary" style="margin-bottom:42%;">
                                                        <div class="figures">

                                                            <img class="image-main" src="~/Content/images/calendar.png">
                                                            <img class="image-hover" src="~/Content/images/calendar-survol.png">

                                                        </div>
                                                    </div>

                                                    <p class="card-text">Planifier un rendez-vous pour votre test TOEIC</p>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    if (@ViewBag.permision != 0)
                                    {

                                        if (p != 0)
                                        {
                                            if (@ViewBag.Note_globale != 0)
                                            {
                                                <div class="col-md-4" id="btncadre">
                                                    <div class="card">
                                                        <div class="card-body ">
                                                            <a style="text-decoration:none;" href="http://s371880604.onlinehome.fr/webcalendar/srcs/www/auto.php?module=auto&action=default:stagiaire&x=@Model.nom&y=@Model.Numero&p=@p">
                                                                <div class="card-title sary" style="margin-bottom:30%;">
                                                                    <div class="figures">

                                                                        <img class="image-main" src="~/Content/images/calendar.png">
                                                                        <img class="image-hover" src="~/Content/images/calendar-survol.png">

                                                                    </div>
                                                                </div>

                                                                <p class="card-text" style="text-decoration : None ;">Planifier un rendez-vous pour votre évaluation par téléphone</p>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        }
                                    }

                                }
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
